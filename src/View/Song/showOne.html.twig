{% extends 'layout.html.twig' %}
{% block content %}

    <div class="container shadow-lg mt-5 bg-white">
        <h2 class="text-center pt-5 mb-5">{{ songs[0].playlistName | capitalize}}</h2>
        <ul>
            {% for song in songs%}
                <li class="d-flex justify-content-between mb-5 pb-4  ">
                    <div class="text-center mt-5">
                        <h4><a href="{{ song.url }}" target="_blank" class="text-decoration-none text-dark">{{ song.songName | capitalize }}</a></h4>
                        <p>{{ song.content }}</p>
                    </div>
                    <iframe width="560" height="315" src="{{ song.url }}" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="diagonal-bg">
        <svg xmlns='http://www.w3.org/2000/svg' width='100%' height='100%'><line x1='100%' y1='0' x2='1' y2='100%' stroke='#038c5a' stroke-width='30%'/></svg>
    </div>

{% endblock %}