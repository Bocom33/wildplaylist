{% extends 'layout.html.twig' %}
{% block content %}

    <div class="container shadow-lg mt-5 bg-white pb-2 mb-4">
        <h2 class="text-center pt-5 mb-5">{{ songs[0].playlistName | capitalize}}</h2>
        <ul class="mb-5 text-center">
            {% for song in songs%}
                <li class="d-flex justify-content-between align-items-center flex-wrap mb-5 pb-4 mr-5 song  border border-white rounded iframeHover" title="Cliquez pour faire apparaitre le clip">
                    <div class="text-left m-5">
                        <h4>{{ song.songName | capitalize }} <small><i class="fas fa-angle-right ml-5"></i></small></h4>
                            <!--<a href="{{ song.url }}" target="_blank" class="text-decoration-none text-dark song">{{ song.songName | capitalize }}</a>-->
                        <p>{{ song.content }}</p>
                    </div>
                    <iframe width="560" height="315" src="{{ song.url }}" class="hidden mt-3 mr-3 ml-3" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="diagonal-bg">
        <svg xmlns='http://www.w3.org/2000/svg' width='100%' height='100%'><line x1='100%' y1='0' x2='1' y2='100%' stroke='#038c5a' stroke-width='30%'/></svg>
    </div>

{% endblock %}
{% block js %}
    <script type="text/javascript" src="/assets/js/iframeNotHidden.js"></script>

{% endblock %}