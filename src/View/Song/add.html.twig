{% extends 'layout.html.twig' %}
{% block content %}
    <h2 class="text-center container text-white mt-3 mb-3">Ajouter ma Playlist </h2>
    <form action="" method="post" class="container shadow-lg  rounded text-center bg-white pt-3 mb-5 mt-5">
        <div class="d-flex flex-column align-items-center">
            <label for="name">Titre de ma Playlist : </label>
            <input type="text" name="name" class="small mb-3" min="2" max="255"
                   value="{{  (post is defined) ?  post.name }}" required>
        </div>
        {% if errors.playlist is defined and errors.playlist is not empty %}
            <div class="alert alert-danger ">{{ errors.playlist }} </div>
        {% endif %}
        {% if errors.hasPlaylist.playlistExists is defined  %}
            <div class="alert alert-danger">{{ errors.hasPlaylist.playlistExists }} </div>
        {% endif %}
        {% if errors.playlistName.playlistName is defined %}
            <div class="alert alert-warning">{{ errors.playlistName.playlistName }} </div>
        {% endif %}
        <div class="d-flex flex-column">
            {% if errors.url.urlSong is defined %}
                <div class="alert alert-warning">{{ errors.url.urlSong }} </div>
            {% endif %}
            {% if errors.url.pbUrl is defined %}
                <div class="alert alert-warning h">{{ errors.url.pbUrl }} </div>
            {% endif %}
        </div>
        <h4 class="text-center container text-danger mt-3"> Rendez-vous sur
            <a href="https://www.youtube.com" target="_blank" class="list-dec text-reset text-danger">Youtube.com</a>
        </h4>
        <h4 class="text-center container text-danger mt-4">
            Cherchez vos chansons préférées pour répondre à chaque question
        </h4>
        <h4 class="text-center container text-danger">Copiez-collez les URL sélectionnées </h4>
        <h6 class="text-center container text-danger "> ex :
            <a href="https://www.youtube.com/watch?v=fVfnEyLOkrM"
               target="_blank" class="list-dec text-reset text-danger"> https://www.youtube.com/watch?v=fVfnEyLOkrM</a>
        </h6>
        <h3 class="text-center">
            <a href="https://www.youtube.com" class="list-dec text-danger" target="_blank">
                <i class="fab fa-youtube fa-2x"></i>
            </a>
        </h3>
        {% for question in questions %}
            <div class="form-group mt-5 p-5 rounded border border-warning shadow container d-flex justify-content-around align-items-center">
                <div>
                    <div class=" d-flex flex-column">
                        <label for="urlQ"><i class="fas fa-music mr-3"></i>  Quelle est votre {{question.content}} ?  <i class="fas fa-music ml-3"></i></label>
                        <input type="url" name="{{ question.id }}" id="urlQ{{ question.id }}"
                               value="{{  (post is defined) ?  post[question.id] }}" class="mt-3"  title="https://www.youtube.com/watch?v=fVfnEyLOkrM" required>
                        <input type="hidden" id="qId-{{question.id}}" value="{{ question.id }}" name="qId{{  question.id }}" >
                    </div>
                </div>
            </div>
        {% endfor %}
        <button type="submit" name="ajouter" class="btn btn-outline-success moving-btn btn-lg m-5">Ajouter !
            <i class="far fa-paper-plane"></i>
        </button>
    </form>
    <div class="wave-container">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#ffb6c1" fill-opacity="1" d="M0,288L1440,224L1440,0L0,0Z"></path>
        </svg>
    </div>
{% endblock %}


