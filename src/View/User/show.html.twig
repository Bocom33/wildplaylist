{% extends 'layout.html.twig' %}
{% block content %}
    <div class="mt-4">
        <form action="">
            <label for="choice">Trier par : </label>
            <select name="choice" id="choice">
                <option value="">options</option>
                <option value="">Nom</option>
                <option value="">Date</option>
            </select>
            <button type="submit" class="rounded">Trier !</button>
        </form>
    </div>
    <div class="container text-center">
        <div class="card border shadow-lg p-3 mb-5 bg-white rounded text-center mt-4" >
            <div class="card-body">
                <h5 class="card-title ">Les Playlists</h5>
                <table class="table table-hover">
                    <tbody>
                        {% for playlist in playlists %}
                            <tr>
                                <th scope="row" class="list-dec"><a href="" class="text-dark">{{ playlist.name }}</a></th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}