<div class="container register">
    <div class="row">
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Apply as a Employee</h3>
                    {{ no_error }}
                    <div class="row register-form">
                        <div class="col-md-6">    <!-- Laisse le twig stp quand tu changeras le bootsrap -->
                            <form action = "/user/add" method="post"> <!-- Laisser cette partie  -->
                                <div class="form-group">
                                    <input type="text" name="pseudo" class="form-control" placeholder="Pseudo*"
                                           value= "{% if errors.pseudo is not defined %}{{ user.pseudo}}{% endif %}"  />
                                    {% if  errors.pseudo is defined %}
                                        <div class="error-label">{{ errors.pseudo }} </div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control" placeholder="Your Email *"
                                           value="{% if  errors.email is not defined %}{{ user.email}}{% endif %}"/>
                                    {% if  errors.email is defined %}
                                        <div class="error-label">{{ errors.email }} </div>
                                    {% elseif  errors.emaile is defined %}
                                        <div class="error-label">{{ errors.emaile }} </div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control" placeholder="Password *"
                                           value="{% if errors.password is not defined %}{{ user.password}}{% endif %}"/>
                                    {% if  errors.password is defined %}
                                        <div class="error-label">{{ errors.password }} </div>
                                    {% endif %}
                                </div>
                                <input type="submit" class="btnRegister" value="Register"/>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

