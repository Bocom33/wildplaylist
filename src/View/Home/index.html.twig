{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <h2 class="text-center m-5">Les dernières playlists créées</h2>
    </div>
    {% for playlist in playlists %}
        <div class="media border rounded shadow-lg p-3 mb-5 bg-white p-3 container">
            <div class="media-body ml-lg-5 ml-sm-0 ml-md-0 ">
                <h5 class="mt-0 ml-lg-5 ml-sm-0 ml-md-0 "><a class="text-dark" href="/song/showone/{{ playlist.user_name }}">{{ playlist.user_name |capitalize }} et sa playlist </a></h5>
                <p>Sa {{ playlist.qContent }}<i class="fas fa-arrow-right"></i></p>
            </div>
            <iframe width="560" height="315"   src="{{ playlist.url }}"   allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    {% endfor %}
    <div class="diagonal-bg">
        <svg xmlns='http://www.w3.org/2000/svg' width='100%' height='100%'><line x1='100%' y1='0' x2='1' y2='100%' stroke='#ffb121' stroke-width='30%'/></svg>
    </div>
{% endblock %}
